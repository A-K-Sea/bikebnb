
<div class="content">
  <div class="container">
    <div class="card-bike m-5">
      <%= cl_image_tag @bike.photo.key, crop: :fill %>
      <!-- <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" /> -->
      <div class="card-bike-infos">
        <div>
          <h2>A little description for this awesome bike:</h2>
          <p>Category: <%= @bike.category %></p>
          <p>Brand: <%= @bike.brand %></p>
          <p>Status: <%= @bike.status %></p>
          <p>Number of gears: <%= @bike.number_of_gears %></p>
          <p>Address of the bike: <%= @bike.address %></p>
        </div>
        <div>
          <h2 class="card-bike-pricing"><%= @bike.price_per_day %>â‚¬ per day</h2>
         <!--  <button type="button" class="btn btn-success m-3">Book bike</button> -->
        </div>
        <%= cl_image_tag @bike.user.photo.key, crop: :fill, class:"card-bike-user avatar-bordered" %>
        <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-bike-user avatar-bordered" /> -->
      </div>
    </div>

    <div class="m-5" >
      <%= link_to "Back to index", bikes_path, class: "btn btn-flat" %>
    </div>
  </div>

  <%= simple_form_for [@bike, @booking] do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.submit "Book now", class: "btn btn-success" %>
  <% end %>

  <div class="container mt-5">
    <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
