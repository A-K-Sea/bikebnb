

<div class="container mt-4">
  <%= simple_form_for [@bike, @booking], html: {class: 'form-inline'} do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: "datepicker form-control"} %>
  <%= f.input :end_date, as: :string, input_html: {class: "datepicker form-control"} %>
  <%= f.submit "Book now", class: "btn btn-green-filled" %>
  <% end %>
</div>

<div class="container mt-2">
  <h3>Some information about this awesome bike</h3>

  <div class="container d-flex justify-content-between pl-0 pr-0 mt-4">
    <div class="card-bike mr-3">
     <div class="card-bike-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @bike.photo.key, height: 300, crop: :fill %>')">
     </div>
      <!-- <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" /> -->
      <div class="card-bike-infos">
        <div>
          <h2><%= @bike.description %></h2>
          <p> <i class="fas fa-bicycle"></i> <%= @bike.category %></p>
          <p><i class="fas fa-tag"></i> Brand: <%= @bike.brand %></p>
          <p><i class="fas fa-circle" style="color: #99C2A2; font-size: 12px"></i> <%= @bike.status %></p>
          <p><i class="fas fa-cogs"></i> Number of gears: <%= @bike.number_of_gears %></p>
          <p><i class="fas fa-map-marked-alt"></i> <%= @bike.address %></p>
        </div>
        <div>
          <h2 class="card-bike-pricing"><%= @bike.price_per_day %>â‚¬ per day</h2>
          <!--  <button type="button" class="btn btn-success m-3">Book bike</button> -->
        </div>
      </div>
    </div>

    <div id="map"
      style="width: 100%; height: 722px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="mt-4 mb-4" >
    <%= link_to "Back to all bikes", bikes_path, class: "btn btn-green-dark" %>
  </div>
</div>
