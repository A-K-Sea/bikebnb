<br><br>

<div class="container">
  <h1><em>Have a look at the beautiful bikes we have to offer</em></h1>
</div>

<br><br><br>

<div class="container">
  <div class="cards">
    <% @bikes.each do |bike| %>
      <%= link_to bike_path(bike) do %>
      <div class="card-trip">
        <% if bike.photo.attached? %>
          <%= cl_image_tag bike.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2>Type: <%= bike.category %></h2>
            <p>Brand: <%= bike.brand %></p>
            <p>Status: </p>
          </div>
          <%= cl_image_tag @current_user.photo.key, crop: :fill, class:"card-trip-user avatar-bordered" %>
          <h2>â‚¬<%= bike.price_per_day %></h2>
        </div>
      </div>
    <% end %>
    <% end  %>
  </div>
</div>

<br><br>

<div class = "container mb-4">
  <h2><em>Or pick a location</em></h2>

  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
